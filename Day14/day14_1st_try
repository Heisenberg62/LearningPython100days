import random
from art import *
from game_data import data
game_on = True
final_score=0
a=random.choice(data)
b=random.choice(data)
a_fans=a["follower_count"]
b_fans=b["follower_count"]
def compare_a(input):
    print (f"Compare A:{input['name']} {input['description']} {input['country']}")

def against_b(input):
    print(f"Against B:{input['name']} {input['description']} {input['country']}")

def compare_a_b(input):
    global final_score
    global game_on
    if input == 'a':
        if a_fans > b_fans:
            final_score += 1
#            print(f"you are right! current score: {final_score}")
        else:
            print(f"Sorry, that's wrong. Final score:{final_score}")
            game_on= False
    elif input == 'b':
        if b_fans > a_fans:
            final_score += 1
#            print(f"you are right! current score: {final_score}")
        else:
            print(f"Sorry, that's wrong. Final score:{final_score}")
            game_on= False
def play_again():
    print(logo)
    if final_score>0:
        print("You are Right!",final_score)
    compare_a(a)
    print(vs)
    against_b(b)

    user_input=input("Who has more followers? Type 'A' or 'B': ").lower()
    compare_a_b(user_input)
while game_on:
    play_again()





